@model TechnoEvents.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Public
        </dt>
        <dd class="col-sm-10">
            @(Model.IsPublic ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Organizer
        </dt>
        <dd class="col-sm-10">
            @Model.User.UserName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EventId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>